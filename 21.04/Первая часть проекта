import pyautogui
import time
def znachenie():
    f = str(input("Слово: "))
    pyautogui.moveTo(100,800)
    pyautogui.click()
    time.sleep(3)
    pyautogui.moveTo(160,60)
    pyautogui.click()
    pyautogui.write("значение слова")
    pyautogui.write(f)
    pyautogui.press('enter')
znachenie()
